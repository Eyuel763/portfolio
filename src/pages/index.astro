---
import { getCollection } from 'astro:content';
import '../styles/global.css';

const projects = await getCollection('projects');
const sortedProjects = projects.sort((a, b) => (b.data.isFeatured ? -1 : 1));

const name = "Eyuel Gebreselassie";
const email = "eyuelgebreselassie@gmail.com";
const linkedin = "https://linkedin.com/in/eyuelgebreselassie";
const github = "https://github.com/Eyuel763";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{name} | Software Engineer</title>
	</head>
	<body class="bg-zinc-950 text-zinc-100 selection:bg-blue-500/30 font-sans">
		<main class="max-w-6xl mx-auto px-6 py-20">
			
			<section class="mb-32 mt-10">
				<h1 class="text-6xl md:text-7xl font-bold tracking-tighter mb-6">
					Hey, I'm <span class="text-blue-500">{name}</span>
				</h1>
				<p class="text-xl md:text-2xl text-zinc-400 max-w-3xl leading-relaxed">
					Software Engineering student at <span class="text-zinc-100">AASTU</span>. 
					Backend Developer specializing in <span class="text-zinc-100">Python (Django)</span>and <span class="text-zinc-100">Flutter</span> applications.
				</p>
				
				<div class="flex flex-wrap gap-4 mt-10">
					<a href="/Eyuel_Gebreselassie_Resume.pdf" download class="flex items-center gap-2 bg-blue-600 text-white px-6 py-3 rounded-lg font-bold hover:bg-blue-500 transition shadow-lg shadow-blue-500/20">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
							<path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
						</svg>
						Download CV
					</a>
					<a href={github} target="_blank" class="border border-zinc-700 px-6 py-3 rounded-lg font-bold hover:bg-zinc-900 transition text-zinc-300">
						GitHub
					</a>
				</div>
			</section>

			<section id="work" class="mb-40">
				<div class="flex items-center gap-4 mb-16">
					<h2 class="text-sm font-bold uppercase tracking-[0.2em] text-blue-500">Selected Projects</h2>
					<div class="h-[1px] flex-1 bg-zinc-800"></div>
				</div>

				<div class="flex flex-col gap-32">
					{sortedProjects.map(project => (
						<div class="group grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
							<div class="lg:col-span-6 relative rounded-2xl overflow-hidden bg-zinc-900 border border-zinc-800 group-hover:border-blue-500/30 transition-all duration-500">
								<img 
									src={project.data.mockups?.[0] || "/api/placeholder/800/500"} 
									alt={project.data.title}
									class="w-full aspect-[16/10] object-cover opacity-60 group-hover:opacity-100 transition-opacity duration-500"
								/>
							</div>
							<div class="lg:col-span-6">
								<h3 class="text-4xl font-bold mb-4 text-white group-hover:text-blue-400 transition-colors">
									{project.data.title}
								</h3>
								<p class="text-zinc-400 text-lg leading-relaxed mb-6">{project.data.description}</p>
								<div class="flex flex-wrap gap-2 mb-8">
									{project.data.tags.map(tag => (
										<span class="text-[10px] font-mono font-bold tracking-wider uppercase bg-zinc-900 border border-zinc-800 px-3 py-1 rounded text-zinc-400">
											{tag}
										</span>
									))}
								</div>
								<a href={project.data.repoLink} target="_blank" class="flex items-center gap-2 text-sm font-black text-white hover:tracking-widest transition-all uppercase">
									View Source <span class="text-blue-500">→</span>
								</a>
							</div>
						</div>
					))}
				</div>
			</section>

			<section class="grid grid-cols-1 md:grid-cols-2 gap-16 mb-40">
				<div>
					<h2 class="text-sm font-bold uppercase tracking-widest text-blue-500 mb-8">Education</h2>
					<div class="border-l border-zinc-800 pl-6">
						<h3 class="text-xl font-bold">Addis Ababa Science and Technology University </h3>
						<p class="text-zinc-400">B.Sc. in Software Engineering </p>
						<p class="text-zinc-500 text-sm italic mt-1 font-mono">2023 — 2027 (Expected) ]</p>
					</div>
				</div>
				<div>
					<h2 class="text-sm font-bold uppercase tracking-widest text-blue-500 mb-8">Notable Experience</h2>
					<div class="space-y-8 border-l border-zinc-800 pl-6">
						<div>
							<h3 class="text-lg font-bold">GDG Team Lead </h3>
							<p class="text-zinc-400 text-sm">Managed 9 developers for Reunite Hub.</p>
						</div>
						<div>
							<h3 class="text-lg font-bold">ALX Capstone Developer</h3>
							<p class="text-zinc-400 text-sm">Engineered secure Personal Budgeting APIs.</p>
						</div>
					</div>
				</div>
			</section>

			<section id="contact" class="bg-blue-600/5 border border-blue-500/20 rounded-3xl p-12 text-center">
				<h2 class="text-4xl font-bold mb-4">Let's work together</h2>
				<p class="text-zinc-400 mb-10 max-w-lg mx-auto">
					I'm currently looking for new opportunities in Backend and Software Engineering. My inbox is always open.
				</p>
				<div class="flex flex-col md:flex-row justify-center items-center gap-6">
					<a href={`mailto:${email}`} class="text-xl font-bold hover:text-blue-400 transition-colors">
						{email} 
					</a>
					<span class="hidden md:block text-zinc-700">|</span>
					<a href={linkedin} target="_blank" class="text-xl font-bold hover:text-blue-400 transition-colors">
						LinkedIn Profile 
					</a>
				</div>
			</section>

			<footer class="mt-40 py-10 border-t border-zinc-900 text-center text-zinc-600 text-sm font-mono">
				<p>© {new Date().getFullYear()} {name} — Built with Astro & Tailwind</p>
			</footer>
		</main>
	</body>
</html>