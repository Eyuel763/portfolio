---
import { getCollection } from "astro:content";
import "../styles/global.css";

const projects = await getCollection("projects");
const sortedProjects = projects.sort((a, b) => (b.data.isFeatured ? -1 : 1));

const name = "Eyuel Gebreselassie";
const email = "eyuelgebreselassie@gmail.com";
const linkedin = "https://www.linkedin.com/in/eyuel-gebreselassie";
const github = "https://github.com/Eyuel763";
const telegram = "https://t.me/Eyu_G";
const instagram = "https://instagram.com/_eyu_g_";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{name} | Software Engineer</title>
    </head>
    <body
        class="bg-zinc-950 text-zinc-100 selection:bg-blue-500/30 font-sans overflow-x-hidden"
    >
        <main class="max-w-6xl mx-auto px-4 sm:px-6 py-10 md:py-20">
            <section class="mb-20 md:mb-32 mt-4 md:mt-10">
                <div
                    class="grid grid-cols-1 lg:grid-cols-12 gap-8 md:gap-12 items-center"
                >
                    <div
                        class="lg:col-span-8 order-2 lg:order-1 text-center lg:text-left"
                    >
                        <h1
                            class="text-4xl sm:text-5xl md:text-7xl font-bold tracking-tighter mb-4 md:mb-6 text-white leading-tight"
                        >
                            Hey, I'm <span class="text-blue-500">{name}</span>
                        </h1>
                        <div class="space-y-3 md:space-y-4">
                            <h2
                                class="text-xl sm:text-2xl md:text-3xl font-semibold text-zinc-100 tracking-tight"
                            >
                                Software Engineer | Full-Stack Web & Mobile
                            </h2>
                            <p
                                class="text-base sm:text-lg md:text-2xl text-zinc-400 max-w-2xl mx-auto lg:mx-0 leading-relaxed"
                            >
                                Specialized in building scalable ecosystems with <span
                                    class="text-zinc-100">Django</span
                                > and <span class="text-zinc-100">Flutter</span
                                >. I lead cross-functional teams to turn complex
                                problems into real-time, high-impact solutions.
                            </p>
                        </div>

                        <div
                            class="flex flex-wrap justify-center lg:justify-start gap-4 mt-8 md:mt-10"
                        >
                            <a
                                href="/Eyuel_Gebreselassie_Resume.pdf"
                                download
                                class="w-full sm:w-auto flex justify-center items-center gap-2 bg-blue-600 text-white px-6 py-3 rounded-lg font-bold hover:bg-blue-500 transition shadow-lg shadow-blue-500/20"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-5 w-5"
                                    viewBox="0 0 20 20"
                                    fill="currentColor"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z"
                                        clip-rule="evenodd"></path>
                                </svg>
                                Download CV
                            </a>
                            <a
                                href={github}
                                target="_blank"
                                class="w-full sm:w-auto flex justify-center border border-zinc-700 px-6 py-3 rounded-lg font-bold hover:bg-zinc-900 transition text-zinc-300"
                            >
                                GitHub
                            </a>
                        </div>
                    </div>

                    <div
                        class="lg:col-span-4 order-1 lg:order-2 flex justify-center"
                    >
                        <div class="relative group">
                            <div
                                class="absolute -inset-1 bg-gradient-to-r from-blue-600 to-cyan-500 rounded-full blur opacity-25 group-hover:opacity-50 transition duration-1000"
                            >
                            </div>
                            <img
                                src="/images/profile.jpg"
                                alt={name}
                                class="relative w-48 h-48 sm:w-64 sm:h-64 md:w-80 md:h-80 rounded-full object-cover border-2 border-zinc-800"
                            />
                        </div>
                    </div>
                </div>
            </section>

            <section id="work" class="mb-20 md:mb-40">
                <div class="flex items-center gap-4 mb-12 md:mb-16">
                    <h2
                        class="text-sm font-bold uppercase tracking-[0.2em] text-blue-500"
                    >
                        Selected Projects
                    </h2>
                    <div class="h-[1px] flex-1 bg-zinc-800"></div>
                </div>

                <div class="flex flex-col gap-20 md:gap-32">
                    {
                        sortedProjects.map((project) => (
                            <div class="group grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
                                <div class="lg:col-span-6 relative rounded-2xl overflow-hidden bg-zinc-900 border border-zinc-800 group-hover:border-blue-500/30 transition-all duration-500">
                                    <img
                                        src={
                                            project.data.mockups?.[0] ||
                                            "/api/placeholder/800/500"
                                        }
                                        alt={project.data.title}
                                        class="w-full aspect-[16/10] object-cover opacity-60 group-hover:opacity-100 transition-opacity duration-500"
                                    />
                                </div>
                                <div class="lg:col-span-6">
                                    <h3 class="text-3xl md:text-4xl font-bold mb-4 text-white group-hover:text-blue-400 transition-colors">
                                        {project.data.title}
                                    </h3>
                                    <p class="text-zinc-400 text-base md:text-lg leading-relaxed mb-6">
                                        {project.data.description}
                                    </p>
                                    <div class="flex flex-wrap gap-2 mb-8">
                                        {project.data.tags.map((tag) => (
                                            <span class="text-[10px] font-mono font-bold tracking-wider uppercase bg-zinc-900 border border-zinc-800 px-3 py-1 rounded text-zinc-400">
                                                {tag}
                                            </span>
                                        ))}
                                    </div>
                                    <a
                                        href={project.data.repoLink}
                                        target="_blank"
                                        class="flex items-center gap-2 text-sm font-black text-white hover:tracking-widest transition-all uppercase"
                                    >
                                        View Source{" "}
                                        <span class="text-blue-500">→</span>
                                    </a>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </section>

            <section class="mb-20 md:mb-40">
                <div
                    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6"
                >
                    <div
                        class="p-6 md:p-8 rounded-2xl bg-zinc-900/30 border border-zinc-800"
                    >
                        <div
                            class="text-2xl md:text-3xl font-bold text-white mb-1"
                        >
                            3.54 GPA
                        </div>
                        <div
                            class="text-[10px] text-blue-500 uppercase font-bold tracking-widest"
                        >
                            AASTU Excellence
                        </div>
                    </div>
                    <div
                        class="p-6 md:p-8 rounded-2xl bg-zinc-900/30 border border-zinc-800"
                    >
                        <div
                            class="text-2xl md:text-3xl font-bold text-white mb-1"
                        >
                            GDG Lead
                        </div>
                        <div
                            class="text-[10px] text-blue-500 uppercase font-bold tracking-widest"
                        >
                            Team Leadership
                        </div>
                    </div>
                    <div
                        class="p-6 md:p-8 rounded-2xl bg-zinc-900/30 border border-zinc-800 sm:col-span-2 lg:col-span-1"
                    >
                        <div
                            class="text-2xl md:text-3xl font-bold text-white mb-1"
                        >
                            ALX Certified
                        </div>
                        <div
                            class="text-[10px] text-blue-500 uppercase font-bold tracking-widest"
                        >
                            Backend Dev
                        </div>
                    </div>
                </div>
            </section>

            <section
                class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-16 mb-20 md:mb-40"
            >
                <div>
                    <h2
                        class="text-sm font-bold uppercase tracking-widest text-blue-500 mb-8"
                    >
                        Education
                    </h2>
                    <div class="border-l border-zinc-800 pl-6">
                        <h3 class="text-xl font-bold">
                            Addis Ababa Science and Technology University
                        </h3>
                        <p class="text-zinc-400">
                            B.Sc. in Software Engineering
                        </p>
                        <p class="text-zinc-500 text-sm italic mt-1 font-mono">
                            2023 — 2027 (Expected)
                        </p>
                    </div>
                </div>
                <div>
                    <h2
                        class="text-sm font-bold uppercase tracking-widest text-blue-500 mb-8"
                    >
                        Notable Experience
                    </h2>
                    <div class="space-y-8 border-l border-zinc-800 pl-6">
                        <div>
                            <h3 class="text-lg font-bold">GDG Team Lead</h3>
                            <p class="text-zinc-400 text-sm">
                                Managed 9 developers for Reunite Hub.
                            </p>
                        </div>
                        <div>
                            <h3 class="text-lg font-bold">
                                ALX Capstone Developer
                            </h3>
                            <p class="text-zinc-400 text-sm">
                                Engineered secure Personal Budgeting APIs.
                            </p>
                        </div>
                    </div>
                </div>
            </section>

            <section
                id="contact"
                class="bg-blue-600/5 border border-blue-500/20 rounded-2xl md:rounded-3xl p-8 md:p-12 text-center"
            >
                <h2 class="text-3xl md:text-4xl font-bold mb-4 text-white">
                    Let's work together
                </h2>
                <p
                    class="text-zinc-400 mb-10 max-w-lg mx-auto text-sm md:text-base"
                >
                    I'm currently looking for new opportunities in Backend and
                    Software Engineering. My inbox is always open.
                </p>
                <div class="mb-10 flex justify-center w-full px-2">
                    <a
                        href={`mailto:${email}`}
                        class="text-[17px] xs:text-xl sm:text-2xl md:text-3xl font-bold text-blue-400 hover:text-blue-300 transition-colors underline decoration-blue-500/30 underline-offset-8 whitespace-nowrap"
                    >
                        {email}
                    </a>
                </div>

                <div class="flex justify-center items-center gap-8">
                    <a
                        href={linkedin}
                        target="_blank"
                        aria-label="LinkedIn"
                        class="text-zinc-400 hover:text-blue-500 transition-all transform hover:scale-110"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            class="md:w-7 md:h-7"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><path
                                d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
                            ></path><rect x="2" y="9" width="4" height="12"
                            ></rect><circle cx="4" cy="4" r="2"></circle></svg
                        >
                    </a>
                    <a
                        href={telegram}
                        target="_blank"
                        aria-label="Telegram"
                        class="text-zinc-400 hover:text-blue-400 transition-all transform hover:scale-110"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            class="md:w-7 md:h-7"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><line x1="22" y1="2" x2="11" y2="13"
                            ></line><polygon points="22 2 15 22 11 13 2 9 22 2"
                            ></polygon></svg
                        >
                    </a>
                    <a
                        href={instagram}
                        target="_blank"
                        aria-label="Instagram"
                        class="text-zinc-400 hover:text-pink-500 transition-all transform hover:scale-110"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            class="md:w-7 md:h-7"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><rect
                                x="2"
                                y="2"
                                width="20"
                                height="20"
                                rx="5"
                                ry="5"></rect><path
                                d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
                            ></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"
                            ></line></svg
                        >
                    </a>
                </div>
            </section>

            <footer
                class="mt-20 md:mt-40 py-10 border-t border-zinc-900 text-center text-zinc-600 text-xs md:text-sm font-mono"
            >
                <p>
                    © {new Date().getFullYear()}
                    {name} — Built with Astro & Tailwind
                </p>
            </footer>
        </main>
    </body>
</html>
